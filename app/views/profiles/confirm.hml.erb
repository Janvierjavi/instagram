<h1>confirmation screen</h1>
<%= form_with(model: @profile, url: profiles_path, local: true) do |form| %>
  <!-- Description for displaying the uploaded image on the confirmation screen -->
  <%= image_tag(@profile.image.url) if @profile.image && @profile.image.url, class:"images" %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "Post" %>
<% end %>

<%= form_with(model:@profile, url:new_profile_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "Return", name: "back" %>
<% end %>